            <div class="cart-table__body">
                <div class="cart-table__td cart-table__td--row">2</div>
                <div class="cart-table__td cart-table__td--product">
                    <div class="cart-product">
                        <a href="#" class="cart-product__photo-link"><img class="cart-product__photo"  src="~/Images/Products/344.jpg" alt="کفش ملی مدل ارین" /></a>
                        <div class="cart-product__titles">
                            <a class="cart-product__primary-title">کفش ملی مدل ارین</a><br />
                            <a class="cart-product__secondary-title">Arian Shoes 24</a>
                        </div>
                    </div>
                </div>
