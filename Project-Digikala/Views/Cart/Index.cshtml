                </div>
                <div class="cart-table__td cart-table__td--count">2</div>
                <div class="cart-table__td cart-table__td--price">20,000 تومان</div>
                <div class="cart-table__td cart-table__td--totalp">40,000 تومان</div>
                <div class="cart-table__td cart-table__td--action"><a href="/Cart/remove/1" class="button" ><span class="button-text">حذف</span></a></div>
