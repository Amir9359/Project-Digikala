@model Specification
@{
    var idd = ViewBag.idd; //شناسه تگ
    ViewData["Title"] = "لیست مقادیر برچسب رنگ"  ;
}
@section breadcrumb{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb bg-dark bg-opacity-10">
            <li class="breadcrumb-item align-text-top "><a class="pe-1   m-1 breadcrumb-link" asp-area="Admin" asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
            <li class="breadcrumb-item align-text-top "><a class="pe-1   m-1 breadcrumb-link" asp-area="Admin" asp-controller="Tag" asp-action="List" >لیست برچسب ها </a></li>
            <li class="breadcrumb-item m-0" aria-current="page">لیست زیر شاخه ها </li>

        </ol>
    </nav>


    <div class="card ">

        <div class="card-header ">
            <div class="d-flex align-items-center justify-content-between">
                <h1 class="h5">لیست برچسب</h1>
                <div>
                    <a class="btn btn-primary btn-sm " data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">فیلتر</a>
                    <a class="btn btn-success btn-sm " asp-area="Admin" asp-controller="Tag" asp-action="AddValue" asp-route-Tagid="@idd">افرزودن برچسب ها </a>
                </div>
            </div>
        </div>
        <div class="card-body ">

            <div class="row justify-content-center">

                <div class="collapse col-md-6 " id="collapseExample">
                    <div class="card  mb-3  justify">
                        <div class="card-header style-1  overflow-hidden m-0 w-100 bg-info text-light">فیلتر</div>
                        <div class="card-body">

                            <form action="" class="form-control" method="post">
                                <input type="hidden" name="id" value="@idd" />
                                <div class="row  mb-3">
                                    <label for="Titletxt" class="form-label col-md-2">عنوان:</label>
                                    <div class="col-md-10">
                                        <input class="form-control " id="Titletxt" name="title">
                                    </div>
                                </div>



                                <div class="row mb-3">
                                    <label for="ddlState" class="form-label col-md-2">وضعیت:</label>
                                    <div class="col-md-10">
                                        <select class="form-select" id="ddlState" name="state">
                                            <option selected disabled>لطفا انتخاب کنید...</option>
                                            <option value="1">فعال</option>
                                            <option value="2">غیر فعال</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-md-5"></div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-primary pe-2  mb-2 text-center">فیلتر</button>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <nav aria-label="Page navigation example" dir="ltr">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <table class="table table-striped table-primary">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">عنوان</th>
                        <th scope="col">وضعیت</th>
                        <th scope="col">ایجاد کننده</th>
                        <th scope="col">آخرین تغییرات</th>
                        <th scope="col" class="text-start"></th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td style="width:25%;">
                            <strong><a class="text-decoration-none" href="#">سبز</a></strong><br />
                        </td>
                        <td>فعال</td>
                        <td><span>امیر حسین خوشبخت </span><br /><strong class="text-muted">تاریخ: 1400/10/11 و 9:30</strong></td>
                        <td><span>دانیال طهوری</span><br /><strong class="text-muted">تاریخ: 1400/10/15 و 10:10</strong></td>
                        <td class="align-middle text-start">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"></button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Tag" asp-action="EditValue" asp-route-id="1">ویرایش</a></li>
                                    <li><a class="dropdown-item text-danger" asp-area="Admin" asp-controller="Tag" asp-action="DeleteValue" asp-route-id="1">حذف</a></li>

                                </ul>
                            </div>
                        </td>
                    </tr>


                </tbody>
            </table>

            <nav aria-label="Page navigation example " dir="ltr">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>


    <br />
    <br />

}


