@model List<SpecificationGroupViewModel>
@{
    var idd = ViewBag.Id;
    var productid = ViewBag.productid;
    ViewData["Title"] = "مدیریت مشخصات فنی ";
    int count = 0;
}
@section breadcrumb{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb bg-dark bg-opacity-10">
            <li class="breadcrumb-item align-text-top "><a class="pe-1   m-1 breadcrumb-link" asp-area="Admin" asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
            <li class="breadcrumb-item align-text-top"><a class="pe-1   m-1 breadcrumb-link" asp-area="Admin" asp-controller="Product" asp-action="list">لیست محصولات</a></li>
            <li class="breadcrumb-item m-0" aria-current="page">مدیریت مشخصات فنی </li>

        </ol>
    </nav>



    <div class="card ">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h1 class="h5"> مدیریت مشخصات فنی  @ViewBag.product.PrimaryTitle</h1>
        </div>

        <div class="card-body ">
            <form asp-area="Admin" asp-controller="Product" asp-action="saveSpecification" class="form-control validnd" method="post" enctype="multipart/form-data" novalidate>
                <input type="hidden" value="@productid" name="productid" />
                @if (Model != null)
                {

               
                @foreach (var SpecificationGroup in Model)
                {
                    <div class="card mb-3">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <h1 class="h6"> @SpecificationGroup.Title</h1>
                        </div>
                        @foreach (var Specification in SpecificationGroup.Specifications)
                        {
                            <div class="row  mb-4 mt-4 position-relative">
                                <label for="txtval-1" class="form-label col-md-1 pe-4"> @Specification.Title:</label>
                                <div class="col-md-6">
                                    <input type="hidden" value="@Specification.Id" name="ids" />
                                    <input class="form-control" id="txtval-1" autocomplete="off" maxlength="50" name="value-@Specification.Id">
                                </div>
                            </div>
                            count++;
                        }
                    </div>

                    }

                <div class="row mt-4">
                    <div class="col-md-1"></div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-success pe-3 ps-3 mb-3">ثبت </button>

                    </div>
                </div>
                }
            </form>
            </div>

</div>

}



