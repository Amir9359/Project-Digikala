@model Product
@{
    var idd = ViewBag.Id;
    var groupid = ViewBag.Groupid;
    ViewData["Title"] = (idd != null ? "تغییر  " : "افزودن ") + "مشخصات فنی";
}
@section breadcrumb{
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb bg-dark bg-opacity-10">
            <li class="breadcrumb-item align-text-top "><a class="pe-1   m-1 breadcrumb-link" asp-area="Admin" asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
            <li class="breadcrumb-item align-text-top"><a class="pe-1   m-1 breadcrumb-link" asp-area="Admin" asp-controller="Product" asp-action="list">لیست محصولات</a></li>
            <li class="breadcrumb-item m-0" aria-current="page">@(idd != null ? "تغییر  " : "افزودن ")  مشخصات فنی</li>

        </ol>
    </nav>



    <div class="card ">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h1 class="h5">@(idd != null ? "تغییر  " : "افزودن ")مشخصات فنی</h1>
            <div>
                <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Product" asp-action="list">لیست محصولات</a>
            </div>
        </div>
        <div class="card-body ">

            <form  asp-area="Admin" asp-controller="Product" asp-action="saveSpecification" class="form-control validnd" method="post" enctype="multipart/form-data" novalidate> 
                        <input type="hidden" value="@groupid" name="productid" />

                <div class="row  mb-3 mt-3">
                    <label for="txtval-1" class="form-label col-md-1">ابعاد</label>
                    <div class="col-md-6">
                        <input type="hidden" value="1" name="ids" />
                        <input class="form-control" id="txtval-1"  autocomplete="off" maxlength="50" name="value-1" >
                    </div>
                </div>

                 <div class="row  mb-3 mt-3">
                    <label for="txtval-2" class="form-label col-md-1">رنگ</label>
                    <div class="col-md-6">
                        <input type="hidden" value="2" name="ids" />
                        <input class="form-control" id="txtval-2" autocomplete="off" maxlength="50" name="value-2">
                    </div>
                </div>     
                <div class="row  mb-3 mt-3">
                    <label for="txtval-3" class="form-label col-md-1">تفکیک پذیری</label>
                    <div class="col-md-6">
                        <input type="hidden" value="3" name="ids" />
                        <input class="form-control" id="txtval-3" autocomplete="off" maxlength="50" name="value-3">
                    </div>
                </div>
 
                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-success pe-3 ps-3 mb-3">ثبت </button>

                    </div>
                </div>

            </form>





        </div>
    </div>

}
 


