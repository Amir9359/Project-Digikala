<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>DigiKala</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Admin/Shared/style.css" rel="stylesheet" />
    @RenderSection("style", required: false)
</head>
<body>
    <nav dir="rtl" class="navbar  navbar-expand-lg navbar-dark bg-primary  ">
        <div class="container-fluid">
            <a class="navbar-brand mb-2 mb-lg-2" href="#">پنل مدیریتی</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto  mb-2 mb-lg-2">
                    <li class="nav-item">
                        <a class="nav-link text-white text-opacity-100 " aria-current="page" href="/Admin/Home/Index">صفحه اصلی</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle me-3 text-white text-opacity-100 font-monospace " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            کالا
                        </a>
                        <ul class="dropdown-menu me-3" style="right:5px; left:auto;margin-right:0;" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item text-right" style=" text-align: right;" href="@Url.Action("list","Product")">لیست کالاها</a></li>
                            <li> <a class="dropdown-item text-right" style=" text-align: right;" href="@Url.Action("Add","Product")">افرزودن کالا</a></li>

                        </ul>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle me-3 text-white text-opacity-100 font-monospace " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                           برندها
                        </a>
                        <ul class="dropdown-menu me-3" style="right:5px; left:auto;margin-right:0;" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item text-right" style=" text-align: right;" href="@Url.Action("list","Brand")">لیست برندها</a></li>
                            <li> <a class="dropdown-item text-right" style=" text-align: right;" href="@Url.Action("Add","Brand")">افرزودن برند</a></li>

                        </ul>



                <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle me-3 text-white text-opacity-100 font-monospace " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                           گروه ها
                        </a>
                        <ul class="dropdown-menu me-3" style="right:5px; left:auto;margin-right:0;" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item text-right" style=" text-align: right;" href="@Url.Action("List","Group")">لیست گروه ها</a></li>
                            <li> <a class="dropdown-item text-right" style=" text-align: right;" href="@Url.Action("Index","Group")">افرزودن گروه</a></li>

                        </ul>



                </ul>
                <form class="d-flex mb-2 mb-lg-2 me-auto">
                    <input class="form-control " type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-dark me-1" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div dir="rtl" class="container-fluid  mt-3">

        @RenderSection("breadcrumb", required: false)
    

        @RenderBody()
    </div>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/lib/jquery/jquery.min.js"></script>
        @RenderSection("Scripts", required: false)

</body>
</html>
